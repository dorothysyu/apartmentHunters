<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>
        <!--tools:layout_editor_absoluteX="0dp"-->
        <!--tools:layout_editor_absoluteY="0dp"-->


    <TableRow
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <!--tools:layout_editor_absoluteX="0dp"-->
        <!--tools:layout_editor_absoluteY="0dp"-->


        <Button
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/holo_orange_light"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/add_new_apt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/darker_gray"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="16dp" />

    </TableRow>

    <TableLayout
        android:layout_width="382dp"
        android:layout_height="388dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent">
        <!--tools:layout_editor_absoluteX="0dp"-->
        <!--tools:layout_editor_absoluteY="130dp">-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rank_apt1"
                android:layout_width="21dp"
                android:layout_height="29dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/apt1_pic"
                android:layout_width="111dp"
                android:layout_height="116dp"
                app:srcCompat="@color/design_default_color_primary"
                tools:srcCompat="@tools:sample/backgrounds/scenic[3]" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apt1_description"
                    android:layout_width="236dp"
                    android:layout_height="86dp"
                    android:text="@string/apt_description"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rank_apt1"
                android:layout_width="21dp"
                android:layout_height="29dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/apt1_pic"
                android:layout_width="111dp"
                android:layout_height="116dp"
                app:srcCompat="@color/design_default_color_primary"
                tools:srcCompat="@tools:sample/backgrounds/scenic[7]" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apt1_description"
                    android:layout_width="236dp"
                    android:layout_height="80dp"
                    android:text="@string/apt_description"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rank_apt1"
                android:layout_width="21dp"
                android:layout_height="29dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/apt1_pic"
                android:layout_width="111dp"
                android:layout_height="116dp"
                app:srcCompat="@color/design_default_color_primary"
                tools:srcCompat="@tools:sample/backgrounds/scenic[4]" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apt1_description"
                    android:layout_width="236dp"
                    android:layout_height="86dp"
                    android:text="@string/apt_description"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>