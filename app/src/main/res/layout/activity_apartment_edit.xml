<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApartmentEditActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TableRow
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/holo_orange_light"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/add_new_apt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/darker_gray"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="16dp" />

    </TableRow>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="162dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="89dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/apt_description"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:text="@string/apt_address"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="89dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="164dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:text="@string/action_add_price" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/landlord_info_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_add_landlord"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/prompt_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_add_photos"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="210dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="253dp"
        android:layout_height="131dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="279dp"
        tools:srcCompat="@android:color/holo_orange_light" />

    <Button
        android:id="@+id/prompt_match"
        android:layout_width="232dp"
        android:layout_height="87dp"
        android:text="@string/prompt_match"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/extra_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_extra_notes"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="447dp" />

</android.support.constraint.ConstraintLayout>