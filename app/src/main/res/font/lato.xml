<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- LATO LIGHT: for any body text -->
    <!-- light ("regular") -->
    <font
        android:font="@font/lato_light"
        android:fontStyle="normal"
        android:fontWeight="100"

        app:font="@font/lato_light"
        app:fontStyle="normal"
        app:fontWeight="100" />

    <!-- light italic -->
    <font
        android:font="@font/lato_lightitalic"
        android:fontStyle="italic"
        android:fontWeight="100"

        app:font="@font/lato_lightitalic"
        app:fontStyle="italic"
        app:fontWeight="100" />

    <!-- regular ("bold") -->
    <font
        android:font="@font/lato_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/lato_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic-->
    <font
        android:font="@font/lato_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/lato_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />
</font-family>